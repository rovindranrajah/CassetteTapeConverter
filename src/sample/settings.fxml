<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="452.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Settings">
   <children>
      <Label alignment="CENTER" contentDisplay="CENTER" layoutY="1.0" prefHeight="46.0" prefWidth="600.0" text="SETTINGS">
         <font>
            <Font name="System Bold" size="35.0" />
         </font>
      </Label>
      <Label layoutX="22.0" layoutY="128.0" text="Silent Threshold (dB):">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Label>
      <TextField fx:id="thresholdField" layoutX="300.0" layoutY="127.0" prefHeight="26.0" prefWidth="158.0" />
      <TextArea editable="false" layoutX="22.0" layoutY="161.0" prefHeight="70.0" prefWidth="552.0" text="Set the sound threshold level in dB that indicates silent for the audio to be splitted. &#10;[IF ONE SONG GETS SPLIT TO MANY SONGS, DECREASE THE VALUE (-75, -80 etc)]&#10;[IF MANY SONGS IS MERGED TO ONE SONG, INCREASE THE VALUE (-65, -60 etc)]" />
      <Label layoutX="22.0" layoutY="267.0" text="Stop Duration (s):" visible="false">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Label>
      <TextField layoutX="300.0" layoutY="266.0" prefHeight="26.0" prefWidth="158.0" visible="false" />
      <TextArea editable="false" layoutX="22.0" layoutY="300.0" prefHeight="79.0" prefWidth="210.0" text="Set the sound duration in seconds&#10;that indicates the end of audio&#10;being recorded for auto stop.&#10;(Lower value = it will stop easily)" visible="false" />
      <Button fx:id="cancelButton" layoutX="509.0" layoutY="402.0" mnemonicParsing="false" onAction="#cancel" text="Cancel" />
      <Button fx:id="okayButton" layoutX="433.0" layoutY="402.0" mnemonicParsing="false" onAction="#okay" prefHeight="26.0" prefWidth="52.0" text="Okay" />
      <Label layoutX="22.0" layoutY="267.0" text="Stop duration (s):">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Label>
      <TextField fx:id="durationField" layoutX="300.0" layoutY="266.0" prefHeight="26.0" prefWidth="158.0" />
      <TextArea editable="false" layoutX="22.0" layoutY="300.0" prefHeight="79.0" prefWidth="552.0" text="Time taken for the recording to stop automatically after the tape has ended.&#10;[IF THE RECORDING STOPS BEFORE TAPE FINISHES, INCREASE THE VALUE (15, 20 etc)]&#10;[IF THE RECORDING CONTINUES AFTER TAPE FINISHES, DECREASE THE VALUE (5, 2 etc)]&#10;" />
   </children>
</AnchorPane>
